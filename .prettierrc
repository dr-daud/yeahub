{
  "semi": false,
  "singleQuote": true,
  "printWidth": 80,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react$",
    "<THIRD_PARTY_MODULES>",
    "^@shared/(.*)$",
    "^@entities/(.*)$",
    "^@features/(.*)$",
    "^@widgets/(.*)$",
    "^@pages/(.*)$",
    "^@app/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
