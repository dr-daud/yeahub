{
  "semi": false,
  "singleQuote": true,
  "printWidth": 80,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "<THIRD_PARTY_MODULES>",
    "^@repo/ui(.*)$",
    "^@/components/(.*)$",
    "^@/lib/(.*)$",

    "^#components/(.*)$",
    "^#lib/(.*)$",
    "^#(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
